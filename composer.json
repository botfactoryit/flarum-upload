{
    "name": "botfactoryit/flarum-upload",
    "description": "Upload images from Flarum post composer",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": ">=0.1.0-beta.16 <0.1.0-beta.17",
        "ext-fileinfo": "*",
        "intervention/image": "^2.5"
    },
    "authors": [
        {
            "name": "Matteo Contrini",
            "email": "matteo@contrini.it",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "BotFactory\\Upload\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Upload",
            "category": "feature",
            "icon": {
                "name": "fas fa-arrow-circle-up",
                "backgroundColor": "#D2202F",
                "color": "#ffffff"
            }
        }
    }
}
